extends layout

block content
  .page-login
    h2 Input your accout
    form(action='/', method='post')
      label Username:
      input.form-control(type='text', name='username', placeholder='Your username')
      label Password:
      input.form-control(type='password', name='password', placeholder='Your password')
      input.btn.btn-lg.btn-primary.btn-block(type='submit', name='enter', value='Login')
    p Do not have an accout? Please register here
